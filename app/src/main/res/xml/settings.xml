<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory>
        <PreferenceScreen
            android:icon="@drawable/ic_person_black_24dp"
            android:key="player_subscreen"
            android:persistent="false"
            android:title="@string/settings_cmdr_category_title">
            <EditTextPreference
                android:title="@string/settings_edsm_key_title"
                android:summary="@string/settings_edsm_key_summary"
                android:key="@string/settings_edsm_key"
                android:inputType="textNoSuggestions"
                app:negativeButtonText="@android:string/cancel"
                app:positiveButtonText="@android:string/ok"
                />
            <EditTextPreference
                android:title="@string/settings_cmdr_title"
                android:summary="@string/settings_cmdr_summary"
                android:key="@string/settings_cmdr"
                android:inputType="textNoSuggestions"
                app:negativeButtonText="@android:string/cancel"
                app:positiveButtonText="@android:string/ok"
                />
        </PreferenceScreen>
    </PreferenceCategory>
    <PreferenceCategory>
        <PreferenceScreen
            android:icon="@drawable/settings_notifications"
            android:key="@string/settings_notifications_subscreen"
            android:persistent="false"
            android:title="@string/settings_notifications_category_title">
            <CheckBoxPreference
                android:title="@string/settings_notifications_new_goal_title"
                android:summary="@string/settings_notifications_new_goal_summary"
                android:key="@string/settings_notifications_new_goal" />
            <CheckBoxPreference
                android:title="@string/settings_notifications_new_tier_title"
                android:summary="@string/settings_notifications_new_tier_summary"
                android:key="@string/settings_notifications_new_tier" />
            <CheckBoxPreference
                android:title="@string/settings_notifications_finished_goal_title"
                android:summary="@string/settings_notifications_finished_goal_summary"
                android:key="@string/settings_notifications_finished_goal" />
        </PreferenceScreen>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/settings_general_category_title">
            <CheckBoxPreference
                android:title="@string/settings_dark_theme_title"
                android:summary="@string/settings_dark_theme_summary"
                android:key="@string/settings_dark_theme" />
    </PreferenceCategory>
</PreferenceScreen>