<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/view_marker_bg"
    android:padding="4dp">

    <TextView
        android:id="@+id/factionNameTextView"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/updateDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/factionNameTextView"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/influenceLabelTextView"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/updateDateTextView"
        android:text="@string/influence"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/influenceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/updateDateTextView"
        android:layout_toEndOf="@id/influenceLabelTextView"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/stateLabelTextView"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/influenceLabelTextView"
        android:text="@string/state_label"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/stateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/influenceLabelTextView"
        android:layout_toEndOf="@id/influenceLabelTextView"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textSize="12sp" />
</RelativeLayout>