<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView"
    style="@style/CardView"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="2dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp" >

    <RelativeLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="24dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/permitRequiredTextView"
            android:layout_marginTop="8dp"
            android:layout_below="@id/titleTextView"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/permit_required_label"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/distanceLabelTextView"
            android:layout_marginTop="8dp"
            android:layout_below="@id/permitRequiredTextView"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/distance_label"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/distanceTextView"
            android:layout_marginTop="8dp"
            android:layout_below="@id/permitRequiredTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/distanceLabelTextView"
            android:layout_toEndOf="@id/distanceLabelTextView"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/distanceToStarLabelTextView"
            android:layout_marginTop="8dp"
            android:layout_below="@id/distanceLabelTextView"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/distance_to_star"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/distanceToStarTextView"
            android:layout_marginTop="8dp"
            android:layout_below="@id/distanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/distanceLabelTextView"
            android:layout_toEndOf="@id/distanceLabelTextView"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/stockLabelTextView"
            android:layout_marginTop="8dp"
            android:layout_below="@id/distanceToStarLabelTextView"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/stock_label"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/stockTextView"
            android:layout_marginTop="8dp"
            android:layout_below="@id/distanceToStarLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/landingPadLabelTextView"
            android:layout_toEndOf="@id/landingPadLabelTextView"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/priceLabelTextView"
            android:layout_marginTop="8dp"
            android:layout_below="@id/stockLabelTextView"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/price_label"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/priceTextView"
            android:layout_marginTop="8dp"
            android:layout_below="@id/stockLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/landingPadLabelTextView"
            android:layout_toEndOf="@id/landingPadLabelTextView"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/landingPadLabelTextView"
            android:layout_marginTop="8dp"
            android:layout_below="@id/priceLabelTextView"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/landing_pad_label"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/landingPadTextView"
            android:layout_marginTop="8dp"
            android:layout_below="@id/priceLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/landingPadLabelTextView"
            android:layout_toEndOf="@id/landingPadLabelTextView"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

    </RelativeLayout>

</android.support.v7.widget.CardView>