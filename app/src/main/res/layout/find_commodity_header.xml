<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView"
    style="@style/CardView"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="2dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp" >

    <RelativeLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="24dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_parameters"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/commodityInputLayout"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_below="@id/titleTextView"
            android:layout_height="wrap_content">
            <fr.corenting.edcompanion.views.DelayAutoCompleteTextView
                android:id="@+id/commodityInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions"
                android:hint="@string/commodity"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/systemInputLayout"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_below="@id/commodityInputLayout"
            android:layout_height="wrap_content">
            <fr.corenting.edcompanion.views.DelayAutoCompleteTextView
                android:id="@+id/systemInputEditText"
                android:layout_width="match_parent"
                android:inputType="textNoSuggestions"
                android:layout_height="wrap_content"
                android:hint="@string/hint_system"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/systemInputLayout"
            android:id="@+id/includePlanetaryLayout"
            android:layout_marginTop="8dp">

            <fr.corenting.edcompanion.views.ClickToSelectEditText
                android:id="@+id/includePlanetarySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/include_planetary" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/includePlanetaryLayout"
            android:id="@+id/buyOrSellLayout"
            android:layout_marginTop="8dp">

            <fr.corenting.edcompanion.views.ClickToSelectEditText
                android:id="@+id/buyOrSellSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/buy_or_sell" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buyOrSellLayout"
            android:id="@+id/landingPadSizeLayout"
            android:layout_marginTop="8dp">

            <fr.corenting.edcompanion.views.ClickToSelectEditText
                android:id="@+id/landingPadSizeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/landing_pad_size" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/searchButton"
            android:layout_below="@id/landingPadSizeLayout"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</android.support.v7.widget.CardView>