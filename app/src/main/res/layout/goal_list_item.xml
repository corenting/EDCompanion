<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView"
    style="@style/CardView"
    card_view:cardCornerRadius="2dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp" >

    <RelativeLayout
        android:id="@+id/quoteItemLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="24dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

        <RelativeLayout
            android:id="@+id/remainingContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/titleTextView">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:id="@+id/remainingImageView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                card_view:srcCompat="@drawable/ic_remaining" />

            <TextView
                android:id="@+id/remainingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:gravity="center_vertical"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_toEndOf="@+id/remainingImageView"
                android:layout_toRightOf="@+id/remainingImageView" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/tierContainer"
            android:layout_below="@+id/remainingContainer">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:id="@+id/tierImageView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                card_view:srcCompat="@drawable/ic_tier" />

            <TextView
                android:id="@+id/tierTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:gravity="center_vertical"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_toEndOf="@+id/tierImageView"
                android:layout_toRightOf="@+id/tierImageView" />
        </RelativeLayout>

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_marginTop="18dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="Lorem ipsum"
            android:layout_below="@id/tierContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

    </RelativeLayout>

</android.support.v7.widget.CardView>